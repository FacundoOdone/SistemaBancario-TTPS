<div>
  <h1 class="font-bold text-4xl">Indice de sucursales</h1>
  <a href="/branchoffice/new"> <button type="button" class="btn btn-primary">  Nueva Sucursal</button> </a>
  <% @branch_offices.each do |sucursal| %>
    <div class="row">
      <div class="card">
        <div class= "card-title" >
         <p> <b style="color:#FF7F63"> Sucursal: </b> <a style="color:white" ><%= sucursal.name %> </p> </a>
        </div>
        <div class="card-body" style="color:white">
         <p> <b> Telefono: </b><%= sucursal.tel %> </p>
         <p> <b> Direccion: </b><%= sucursal.direc %> </p>
         <p> <b> Localidad: </b><%= sucursal.location.name %> </p>
         <p> <b> Provincia: </b><%= sucursal.location.province %> </p>
          <a href="/branchoffice/edit/<%= sucursal.id%>"><button class ="btn btn-success"> Editar  </a> </button>
  <% end %>
</div>
