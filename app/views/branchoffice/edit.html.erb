<div class="w-full card">
  <h1 class="font-bold text-4xl">Editar Sucursal</h1>
  <div>
    <%= form_with model: @branch_office do |form| %>
    <div class="row">
      <div class="card">
        <div class="my-5 block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
          style="background-color:Lavender">
          <%= form.label :Nombre, :required => true %> <span
            class="card color_form"><%= form.text_field :name, placeholder: @branch_offices.name, value: @branch_offices.name%></span><br>
          <%= form.label :Direccion, :required => true%> <span
            class="card color_form"><%= form.text_field :direc, placeholder: @branch_offices.direc, value: @branch_offices.direc%></span><br>
          <%= form.label :Telefono, :required => true %> <span
            class="card color_form"><%= form.number_field :tel, placeholder: @branch_offices.tel, value: @branch_offices.tel%></span><br>
          Localidad:<p class="card color_form">
            <%= select_tag :location, options_from_collection_for_select(@locations, "id", "name"), {inlude_blanck: true} %>
          </p> <br>
          <button class="btn btn-success"><%= form.submit "Editar Sucursal"%></button>
        </div>
      </div>
      <% end%>
    </div>
  </div>
</div>