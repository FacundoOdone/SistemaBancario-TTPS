<div>
	<h1 class="font-bold text-4xl">Nuevo Usuario</h1>
	<div>
		<%= form_with model: @users , url: "/users/new" do |form| %>
			<%= form.fields_for :user do |user|%>
				<div class="card">
			  		<div class="my-5 block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" style="background-color:Lavender">
				  		<%= user.label :Email %> <span class=" card color_form"><%= user.email_field :email, class: 'color_form'%></span><br>
				  		<%= user.label :Password %> <span class="card color_form"><%= user.password_field :password, class: 'color_form'%></span>
						<br>
				  	 	Rol:<p class="card color_form"> <%= user.select :rol, ["admin", "operator", "client"]%> </p> 
						<br> 
			<% end %>

          	<%= form.submit "Crear Nuevo Usuario", class:"btn btn-success rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium"%></button>
        	</div>
			</div>
      <%end%>
  </div>
</div>
